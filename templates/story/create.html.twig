{% extends 'base.html.twig' %}

{% block body %}
    <div class="inner-container text-center">
        <div class="form-wrapper">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.title) }}
            </div>
            <div class="form-group">
                {{ form_row(form.url) }}
            </div>
            <div class="form-group">
                {{ form_row(form.tags) }}
                <sub class="float-start" style="margin-top: -.5rem; margin-bottom: 2rem;">
                    Hold <kbd>Cmd</kbd> or <kbd>Ctrl</kbd> to select multiple tags
                </sub>
            </div>
            <button class="w-100 btn btn-lg btn-dark" type="submit">
                Submit
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
